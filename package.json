{
  "name": "airtable-proxy-worker",
  "version": "0.1.0",
  "homepage": "https://github.com/portable-cto/airtable-proxy-worker",
  "description": "A Cloudflare Worker that will proxy requests to the Airtable API",
  "scripts": {
    "build": "AIRTABLE_API_KEY=keyMw00GDuZSOACuD AIRTABLE_API_BASE_ID=appViMIWWjFK9aiMu PROXY_CACHE_TIME=3600 ALLOWED_TARGETS='[{\"resource\":\"News\",\"method\":\"GET\"}, {\"resource\":\"Translations\",\"method\":\"GET\"}, {\"resource\":\"Presskits\",\"method\":\"GET\"}, {\"resource\":\"Media\",\"method\":\"GET\"}]' webpack -p --progress --colors",
    "prettier": "prettier --write 'src/*.js'",
    "lint": "prettier --list-different 'src/*.js'",
    "test": "npm run lint --silent && jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:local": "jest"
  },
  "main": "dist/worker.js",
  "author": "Karl L. Hughes <khughes.me@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.3",
    "jest": "^23.6.0",
    "prettier": "1.14.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
